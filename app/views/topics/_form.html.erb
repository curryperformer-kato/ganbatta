<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@topic)do |f| %>
        <%= f.error_messages! %>
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
        <br>
        <table class="table table-striped table-bordered table-hover">
            <tbody>
              <tr>
                 <th>タスク名</th>
                 <th>メモ</th>
                 <th>削除</th>
              </tr>
              <%= f.nested_fields_for :tasks, wrapper_tag: :tr do |q| %>
                  <td><%= f.text_field :task_name, class: 'form-control' %></td>
                  <td><%= f.text_field :memo, class: 'form-control' %></td>
                  <td><%= f.remove_nested_fields_link '削除', class: 'btn btn-danger', role: 'button' %></td>
              <% end %>
            </tbody>
        </table>
        <%= f.add_nested_fields_link :tasks, '追加', class: 'btn btn-primary', role: 'button' %>
        <br>
        <%= f.label :image %>
        <%= f.file_field :image %>
        <%= f.hidden_field :image_cache %>
        <br>
        <%= f.submit '登録する', class: 'btn btn-primary btn-md' %>
      <% end %>
      <br>
      <%= link_to "投稿一覧", topics_path, class: 'btn btn-success btn-md' %>
    </div>
  </div>
</div>

