<p id="notice"><%= notice %></p>
<div class="child row">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <div class="topic-text">
      <p class="left"><strong>日付</strong></p>
      <p class="left"><%= @topic.title %></p>
      <p class="right">
        <strong>作成時間:</strong>
        <%= @topic.created_at.strftime("%m月%d日 %p %l:%M") %>
      </p>
    </div>
        <% @topic.tasks.each do |task| %>
          <p><%= task.name %></p>
          <p><%= task.memo %></p>
        <% end %>
    <% if current_user.id == @topic.user_id %>
      <%= link_to '頑張ったこと編集', edit_topic_path(@topic), class: 'btn btn-success btn-md' %>
    <% end %>
    <br>
    <br>
    <%= link_to '投稿一覧', topics_path, class: 'btn btn-default btn-md' %>
  </div>
</div>