<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h2>コメント編集</h2>
    <%= form_for([@comment.topic, @comment]) do |f| %>
      <%= f.hidden_field :topic_id %>
      <div class="field">
        <%= f.text_field :content, placeholder: "内容", class: "form-control"  %>
      </div>
      <div class="actions">
        <%= f.submit '登録する', class: 'btn btn-success btn-md' %>
      </div>
    <% end %>
  </div>
</div>
