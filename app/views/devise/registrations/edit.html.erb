<div class="container">
  <div class="wrapper col-md-4 col-md-offset-4 col-sm-10">
    <h2>アカウント編集</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :名前 %><br />
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <% if @user.provider.blank? %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :password %> <br/><h6>(変更しない場合は空のままにしてください。)</h6><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> 文字以上</em>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :current_password %> <br/><h6>(変更を有効にするために入力してください。)</h6><br />
          <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
        </div>
      <% end %>

      <div class="icon_field">
        <%= profile_img(@user) if profile_img(@user) %>
        <%= f.file_field :avatar %>
        <%= f.hidden_field :avatar_cache %>
      </div>
      <br>
      <br>
      <div class="actions">
        <%= f.submit "更新", class: "btn btn-warning btn-lg" %>
      </div>
    <% end %>
    <br>
    <br>
    <h3>アカウント削除</h3>

    <p>本当によろしいですか？ <%= button_to "削除", registration_path(resource_name), data: { confirm: "本当に削除してよろしいですか？" }, method: :delete, class: "btn btn-danger btn-lg" %></p>

    <%= link_to "戻る", :back %>
  </div>
</div>
